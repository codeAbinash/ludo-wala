{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@icons/*": ["src/assets/icons/src/*"],
      "@images/*": ["src/assets/images/src/*"],
      "@animations/*": ["src/assets/animations/src/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"],
      "@screens/*": ["src/screens/*"],
      "@query/*": ["src/query/*"],
      "@/*": ["src/*"]
    }
  }
}
